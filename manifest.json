{
    "manifest_version": 2,
    "author": "Jacopo Donati",
    "name": "Bing Wallpaper Downloader",
    "version": "1.0",
    "description": "A simple extension to download Bing daily wallpapers.",
    "icons": {
        "20": "icons/bing_downloader-20.png",
        "25": "icons/bing_downloader-25.png",
        "30": "icons/bing_downloader-30.png",
        "40": "icons/bing_downloader-40.png",
        "48": "icons/bing_downloader-48.png",
        "96": "icons/bing_downloader-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.bing.com/*"
            ],
            "js": [
                "jquery-3.3.1.min.js",
                "add_button.js"
            ],
            "css": [
                "button.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "images/download.png"
    ]
}